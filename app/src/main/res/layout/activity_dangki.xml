<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    tools:context=".dangki">



    <ImageView

        android:id="@+id/logo"
        android:layout_width="200dp"
        android:layout_height="200dp"
        app:srcCompat="@drawable/iconlogo"

        android:layout_centerHorizontal="true"
        android:scaleType="centerCrop"/>
    <ImageView
        android:id="@+id/img_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_arrow_back_black"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_below="@+id/logo"
        android:paddingRight="15sp"
        android:paddingLeft="15sp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Welcome Back!"
            android:textColor="@android:color/black"
            android:textSize="38dp"
            android:textStyle="bold"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sign up to countine "
            android:layout_marginTop="5dp"/>

        <EditText
            android:id="@+id/edt_passcu"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginTop="20dp"
            android:drawableLeft="@drawable/ic_vpn_key_black_24dp"
            android:paddingLeft="28dp"
            android:hint="Nhập mật khẩu cũ"
            android:fontFamily="sans-serif-condensed"

            android:textColor="@color/clr_lightblue"
            android:textStyle="bold"
            android:background="@drawable/bg_edittext_blue_border"/>


        <EditText
            android:id="@+id/edt_password"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/bg_edittext_blue_border"
            android:drawableLeft="@drawable/ic_lock_open_black_24dp"
            android:hint="Nhập mật khẩu mới"
            android:inputType="textPassword"
            android:paddingLeft="28dp"
            android:fontFamily="sans-serif-condensed"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/edt_kiemtrapass"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginTop="20dp"
            android:drawableLeft="@drawable/ic_lock_open_black_24dp"
            android:paddingLeft="28dp"
            android:hint="Nhập lại mật khẩu"
            android:textStyle="bold"
            android:inputType="textPassword"
            android:fontFamily="sans-serif-condensed"
            android:background="@drawable/bg_edittext_blue_border"/>

        <Button
            android:id="@+id/btndangki"
            android:layout_width="250dp"
            android:layout_height="60dp"
            android:text="UPDATE"
            android:textStyle="bold"
            android:textColor="@android:color/white"
            android:background="@drawable/icon"
            android:layout_marginTop="10dp"/>
        <TextView
            android:id="@+id/txtdangnhap"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textSize="20sp"
            android:gravity="center"
            android:layout_marginTop="10dp"
            android:fontFamily="sans-serif-condensed"
            android:text="Đăng Nhập Tại Đây >>>"/>
    </LinearLayout>

</RelativeLayout>