<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="30dp">

        <TextView
            android:id="@+id/btnTheloai"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:paddingTop="10dp"
            android:layout_centerInParent="true"
            android:textAlignment="center"
            android:background="@color/cam"
            android:fontFamily="@font/roboto_regular"
            android:text="UPDATE SINH VIÊN"
            android:textSize="25dp"
            android:textStyle="bold"
            android:textColor="@android:color/white" />

        <EditText
            android:id="@+id/edt_sua_ten_sv"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_below="@+id/tv_signin"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginStart="20dp"
            android:layout_marginLeft="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginRight="20dp"
            android:background="@drawable/edt_bocong"

            android:drawableLeft="@drawable/ic_person_outline_black_24dp"
            android:drawablePadding="10dp"
            android:fontFamily="@font/roboto_regular"

            android:layout_marginTop="30dp"

            android:padding="15dp"/>
        <EditText
            android:id="@+id/edt_sua_nganh"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_below="@+id/tv_signin"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginStart="20dp"
            android:layout_marginLeft="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginRight="20dp"
            android:background="@drawable/edt_bocong"

            android:drawableLeft="@drawable/ic_school_black_24dp"
            android:drawablePadding="10dp"
            android:fontFamily="@font/roboto_regular"

            android:layout_marginTop="30dp"

            android:padding="15dp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@+id/tv_signin"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginStart="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginRight="20dp"
        android:backgroundTint="#FF5722"
        android:drawableLeft="@drawable/ic_email"
        android:drawablePadding="10dp"
        android:fontFamily="@font/roboto_regular"
        android:orientation="horizontal">

        <TextView
            android:layout_width="59dp"
            android:layout_height="50dp"
            android:background="@drawable/edt_bocong"
            android:drawableLeft="@drawable/ic_school_black_24dp"
            android:fontFamily="@font/roboto_regular"
            android:padding="10dp"
            android:text="NGÀNH"
            android:textColor="#f5f5f5"
            android:textColorHint="#fff"
            android:textSize="20dp"
            android:textStyle="bold" />

        <Spinner
            android:id="@+id/edt_sua_ten_nganh"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/edt_bocong"
            android:drawablePadding="10dp"
            android:fontFamily="@font/roboto_regular"
            android:padding="15dp" />

    </LinearLayout>

        <EditText
            android:id="@+id/edt_sua_date"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_below="@+id/tv_signin"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginStart="20dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="30dp"
            android:layout_marginEnd="20dp"
            android:layout_marginRight="20dp"

            android:background="@drawable/edt_bocong"
            android:drawableLeft="@drawable/ic_date_range_black_24dp"
            android:drawablePadding="10dp"

            android:fontFamily="@font/roboto_regular"

            android:padding="15dp"

            />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:orientation="horizontal"
            android:gravity="center"

            >


            <Button
                android:id="@+id/btnsuasv"
                android:layout_width="150dp"
                android:layout_height="wrap_content"

                android:layout_marginRight="20dp"
                android:background="#FF3300"
                android:fontFamily="@font/roboto_regular"
                android:text="UPDATE"
                android:textColor="@android:color/white" />

            <Button
                android:id="@+id/btnhuysua_sv"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:background="#9A9595"
                android:fontFamily="@font/roboto_regular"
                android:layout_marginLeft="20dp"
                android:text="HỦY"
                android:textColor="@android:color/white" />




        </LinearLayout>


    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>