<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="30dp">

        <TextView
            android:id="@+id/btnTheloai"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:paddingTop="10dp"
            android:layout_centerInParent="true"
            android:textAlignment="center"
            android:background="@color/cam"
            android:fontFamily="@font/roboto_regular"
            android:text="THÊM LỚP"
            android:textSize="25dp"
            android:textStyle="bold"
            android:textColor="@android:color/white" />

        <EditText
            android:id="@+id/edtten_lop"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_below="@+id/tv_signin"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginStart="20dp"
            android:layout_marginLeft="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginRight="20dp"
            android:background="@drawable/edt_bocong"

            android:drawableLeft="@drawable/ic_class_black_24dp"
            android:drawablePadding="10dp"
            android:fontFamily="@font/roboto_regular"
            android:hint="NHẬP TÊN LỚP"
            android:layout_marginTop="30dp"

            android:padding="15dp"

            />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:orientation="horizontal"
            android:gravity="center"

            >


            <Button
                android:id="@+id/btnthemlop"
                android:layout_width="150dp"
                android:layout_height="wrap_content"

                android:layout_marginRight="20dp"
                android:background="#FF3300"
                android:fontFamily="@font/roboto_regular"
                android:text="THÊM"
                android:textColor="@android:color/white" />

            <Button
                android:id="@+id/btnhuythem_lop"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:background="#9A9595"
                android:fontFamily="@font/roboto_regular"
                android:layout_marginLeft="20dp"
                android:text="HỦY"
                android:textColor="@android:color/white" />




        </LinearLayout>


    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>